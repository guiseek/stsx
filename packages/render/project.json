{
  "name": "render",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/render/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/render",
        "main": "packages/render/src/index.ts",
        "tsConfig": "packages/render/tsconfig.lib.json",
        "assets": [
          "packages/render/*.md"
        ],
        "generatePackageJson": true,
        "format": [
          "cjs"
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/render/**/*.ts",
          "packages/render/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/render/jest.config.ts"
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "branches": ["main"],
        "github": true,
        "changelog": true,
        "npm": true,
        "tagFormat": "render-v${VERSION}"
      }
    }
  },
  "tags": []
}
